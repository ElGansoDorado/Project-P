using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

/// <summary>
/// Получение золота
/// </summary>

public class GettingGold : MonoBehaviour
{
    byte tapCount;
    byte tapMax;

    int coins;

    public Text ui;
    public Text ui2;

    private void Start()
    {
        tapCount = 0;
        tapMax = 4;
        coins = 0;
    }
    public void TapCheck()
    {
        if (tapCount >= tapMax)
        {
            tapCount= 0;
            coins += 100;
        }
        else
        {
            tapCount++;
        }

        ui.text = "Ну вот койнов стоко: " + Rounding.FormatNum(coins);
        ui2.text = "тапов стоко: " + (tapMax - tapCount);
    }
    
}
